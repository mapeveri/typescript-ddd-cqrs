{
  "name": "typescript-ddd-cqrs",
  "version": "1.0.0",
  "private": true,
  "description": "typescript-ddd-cqrs backend",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "consumer:domain-events": "TS_NODE_PROJECT=./tsconfig.json ts-node -r tsconfig-paths/register src/consumer.ts",
    "format-code-check": "prettier --check ./src",
    "format-code-fix": "prettier --write ./src",
    "linter-check": "eslint 'src/**/*.ts'",
    "linter-fix": "eslint --fix 'src/**/*.ts'",
    "mikroorm": "npx mikro-orm",
    "test:unit": "vitest --run test/unit",
    "test:acceptance": "vitest --run test/acceptance",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/vitest --runInBand",
    "test:all:mutant": "stryker run",
    "test:mutant": "stryker run -m $(git --no-pager diff --name-only master --diff-filter=AM -- src/ | grep -v 'test.ts' | grep -v '/infrastructure/' | grep -v '/infra/' | tr '\\n' ',' | sed 's/\\(.*\\),/\\1 /')"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.2",
    "@nestjs/testing": "^10.4.6",
    "@stryker-mutator/core": "^8.7.0",
    "@stryker-mutator/vitest-runner": "^8.7.1",
    "@swc/core": "^1.10.14",
    "@types/amqplib": "^0.10.4",
    "@types/express": "^4.17.21",
    "@types/glob": "^7.2.0",
    "@types/node": "^18.19.71",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "faker": "^5.5.3",
    "prettier": "2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@mikro-orm/cli": "^6.3.8",
    "@mikro-orm/core": "^6.3.8",
    "@mikro-orm/migrations": "^6.3.8",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.3.8",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.10",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^7.4.2",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "exponential-backoff": "^3.1.1",
    "express": "^4.21.2",
    "google-auth-library": "^7.14.1",
    "helmet": "^4.6.0",
    "mongodb": "^5.9.1",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikroOrmConfig.ts",
      "./dist/mikroOrmConfig.ts"
    ]
  }
}
