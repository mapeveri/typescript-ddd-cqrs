{
  "name": "typescript-ddd-cqrs",
  "version": "1.0.0",
  "private": true,
  "description": "typescript-ddd-cqrs backend",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/server.ts -r dotenv/config ./src/server.ts dotenv_config_path=.env dotenv_config_debug=true",
    "start": "tsc && npm run build:di && node dist/src/server.js -r dotenv/config ./src/server.js dotenv_config_path=.env dotenv_config_debug=false",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "format-code-check": "prettier --check ./src",
    "format-code": "prettier --write ./src",
    "linter": "eslint 'src/**/*.ts'",
    "linter-fix": "eslint --fix 'src/**/*.ts'",
    "typeorm": "typeorm-ts-node-esm -d src/shared/infrastructure/persistence/typeOrm/dataSource.ts ",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^6.6.9",
    "@types/glob": "^7.1.3",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/method-override": "0.0.31",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.16.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^7.32.0",
    "faker": "^5.5.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.13",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "body-parser": "^1.19.1",
    "copy": "^0.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "google-auth-library": "^7.5.2",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^9.0.0",
    "method-override": "^3.0.0",
    "mongodb": "^5.3.0",
    "node-dependency-injection": "^3.0.5",
    "node-dependency-injection-express-middleware": "^1.2.2",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "tslog": "^3.2.0",
    "typeorm": "^0.3.15",
    "uuid": "^9.0.0"
  }
